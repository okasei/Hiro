<Page x:Class="Hiro.Hiro_Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Hiro"
    mc:Ignorable="d" 
    d:DesignHeight="420" d:DesignWidth="420" KeepAlive="False"
    Title="Hiro_Home">
    <Page.Resources>
        <SolidColorBrush x:Key="AppFore" Color="White"></SolidColorBrush>
    </Page.Resources>
    <Grid>
        <Label x:Name="FakeHello" Content="Hello" FontWeight="Bold" Visibility="Collapsed" FontSize="24"/>
        <Label x:Name="FakeCopyright" Content="Copyright" Visibility="Collapsed"/>
        <TextBlock x:Name="Hello" Text="Good morning, user!" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top"  Foreground ="{DynamicResource AppFore}" FontFamily="Segoe UI" FontWeight="Bold" FontSize="24"/>
        <TextBlock x:Name="Copyright" Text="Copyright © N+&#xA;All Rights Reserved." HorizontalAlignment="Center" Margin="0,340,0,30" VerticalAlignment="Bottom"  Foreground ="{DynamicResource AppFore}" UseLayoutRounding="False" FontFamily="Segoe UI" FlowDirection="LeftToRight" TextWrapping="WrapWithOverflow" FontStyle="Normal" FontStretch="Normal"/>
    </Grid>
</Page>

                <TextBox x:Name="day" HorizontalAlignment="Left" Margin="421,85,0,0" TextWrapping="Wrap" Text="17" VerticalAlignment="Top" Foreground ="{Binding Path = Foreground, ElementName = btn1 }" Width="120" Height="25" FontFamily="Segoe UI" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="2" MouseWheel="Day_MouseWheel" TextChanged="Day_TextChanged"/>
                <TextBox x:Name="hour" HorizontalAlignment="Left" Margin="91,146,0,0" TextWrapping="Wrap" Text="12" VerticalAlignment="Top" Foreground ="{Binding Path = Foreground, ElementName = btn1 }" Width="120" Height="25" FontFamily="Segoe UI" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="2" MouseWheel="Hour_MouseWheel" TextChanged="Hour_TextChanged"/>

<Window x:Class="hiro.Hiro_Cropper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hiro"
        mc:Ignorable="d"
        Title="Hiro_Croper" Height="450" Width="800">
    <Grid>
        <Image x:Name="Original" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Border x:Name="CropBorder" BorderBrush="Cyan" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="100" ></Border>
        <Label x:Name="Mask"  MouseDown="CropBorder_MouseDown" MouseUp="CropBorder_MouseUp" MouseMove="CropBorder_MouseMove" MouseDoubleClick="Mask_MouseDoubleClick"/>
    </Grid>
</Window>

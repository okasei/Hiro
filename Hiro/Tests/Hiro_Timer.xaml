<Window x:Class="Hiro.Hiro_Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hiro"
        mc:Ignorable="d"
        Title="Hiro_Timer" HorizontalAlignment="Left" VerticalAlignment="Top" WindowStyle="None" WindowStartupLocation="Manual" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <Label x:Name="TickLabel" Content="10:24" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseLeftButtonDown="TimeLabel_MouseLeftButtonDown" FontFamily="宋体"></Label>
        <Label x:Name="TimeLabel" Content="10:24" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseLeftButtonDown="TimeLabel_MouseLeftButtonDown" FontFamily="宋体"></Label>
    </Grid>
</Window>
